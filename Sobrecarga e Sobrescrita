/* 
@autor Wesley de Carvalho Souza
programa para calcular ajuste salarial
criação da classe pessoa, implementando o metodo construtor, encapsulamento e get/set
*/

public class Pessoa {
     
    private int idade;
    private String nome;
    
    
//metodo construtor
    public Pessoa(String nome, int idade) {
       this.setNome(nome);
       this.setIdade(idade);
    }
       //metodo de get/set 
    public String getNome() {
        return nome;
    }
    
    public void setNome(String nome) {
        this.nome = nome;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }
            
}
